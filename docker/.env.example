# QuePasa Docker Environment Configuration
# Copy this file to .env and adjust the values according to your needs

## Basic Config
DOMAIN=quepasa.example.com
ACCOUNTSETUP=false
MASTERKEY=YOUR_MASTER_KEY_CHANGE_THIS
MIGRATIONS=/builder/migrations

## Email Configuration
EMAIL=admin@quepasa.example.com
QUEPASA_BASIC_AUTH_USER=admin@quepasa.example.com
QUEPASA_BASIC_AUTH_PASSWORD=ChangeThisPassword123

## App Configuration
APP_TITLE=Quepasa
APP_ENV=production

## TimeZone
TZ=America/Sao_Paulo

## WhatsApp Features
# Options: true, false, forcedfalse (force disable)
GROUPS=true
BROADCASTS=false
READRECEIPTS=true
CALLS=true

## Message Settings
# Auto Read Messages on Arrive (Options: true, false)
READUPDATE=false

# Remove Digit 9 on Brazil Numbers (Options: true, false)
REMOVEDIGIT9=true

## Logging Configuration
# Log Levels: ERROR, WARN, INFO, DEBUG, TRACE
LOGLEVEL=INFO
WHATSMEOW_LOGLEVEL=info
WHATSMEOW_DBLOGLEVEL=info

## QuePasa Service Configuration
QUEPASA_HOST_NAME=Quepasa
QUEPASA_MEMORY_LIMIT=4096M
WEBSOCKETSSL=false
SIGNING_SECRET=BLA!2#BlA123bLA1_CHANGE_THIS_SECRET

## Network and Ports
QUEPASA_EXTERNAL_PORT=31000
QUEPASA_INTERNAL_PORT=31000
WEBAPIPORT=31000

## Debug Options
DEBUGREQUESTS=false
DISPATCHUNHANDLED=true
DEBUGJSONMESSAGES=false
HTTPLOGS=false

## Metrics Configuration
METRICS_HOST=
METRICS_PORT=9392

## Message Context Configuration
SYNOPSISLENGTH=500

## History Sync Configuration
# Number of days to sync history from when a new device connects
HISTORYSYNCDAYS=30

## Cache Configuration
# Number of days and messages to keep in memory for quick access
CACHEDAYS=7
CACHELENGTH=800

## Database Configuration
DBDRIVER=postgres
DBHOST=postgres
DBDATABASE=quepasa_whatsmeow
DBPORT=5432
DBUSER=quepasa
DBPASSWORD=quepasa_password_change_this
DBSSLMODE=disable

## Media Configuration
# Convert PNG to JPG (Options: true, false)
CONVERT_PNG_TO_JPG=true

## Docker Network Configuration
DOCKER_NETWORK=quepasa_network
